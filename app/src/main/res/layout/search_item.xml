<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top"
        android:layout_marginBottom="@dimen/top"

        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_margin_top_nickname"
            android:layout_marginBottom="@dimen/item_margin_top"
            android:paddingStart="@dimen/item_margin_horizontal"
            android:paddingEnd="@dimen/item_margin_horizontal"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/search_item_nickname"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#201E1E"
                    android:textSize="@dimen/item_nickname_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!--<TextView-->
                <!--android:id="@+id/item_age"-->
                <!--android:gravity="center"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/search_item_image"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_margin_top"/>
            <View
                android:background="#A29E9E"
                android:layout_width = "match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/item_margin_top_line"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_margin_top_nickname">
                <TextView
                    android:id="@+id/search_item_nickname_caption"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#201E1E"
                    android:textSize="@dimen/item_nickname_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/search_item_caption"
                    android:textSize="@dimen/item_caption_size"
                    android:textStyle="normal"
                    android:textColor="#201E1E"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/item_margin_top"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/search_item_data"
                android:textSize="@dimen/item_data_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_margin_top_nickname"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>