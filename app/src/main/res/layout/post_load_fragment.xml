<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/item_margin_horizontal"
        android:layout_marginEnd="@dimen/item_margin_horizontal"
        >
    
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/load_image"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <Button
        android:id="@+id/load_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/load_image"
        android:layout_marginTop="@dimen/item_margin_top"
        android:text="Open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/caption_load"
        android:layout_below="@+id/load_button"
        android:layout_width="match_parent"
        app:met_floatingLabel="highlight"
        android:hint="@string/edit_caption"
        android:layout_marginTop="@dimen/top"
        android:layout_height="wrap_content" />
    <Button
        android:layout_below="@+id/caption_load"
        android:id="@+id/send_button"
        android:text="Send"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/item_margin_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </RelativeLayout>

</ScrollView>